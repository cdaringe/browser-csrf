{
  "name": "browser-csrf",
  "description": "Inject CSRF tokens into your browser's network requests",
  "version": "0.0.1",
  "main": "src/index.js",
  "license": "MIT",
  "standard": {
    "globals": [
      "XMLHttpRequest"
    ]
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "pify": "^2.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cdaringe/browser-csrf.git"
  },
  "devDependencies": {
    "body-parser": "^1.17.1",
    "express": "^4.15.2",
    "nsp": "^2.6.3",
    "perish": "^1.0.1",
    "ripcord": "^0.25.7",
    "selenium-standalone": "^6.0.1",
    "selenium-webdriver": "^3.3.0",
    "standard": "^9.0.1",
    "wdio-sauce-service": "^0.3.1",
    "webdriverio": "^4.6.2",
    "webpack": "^2.2.1"
  },
  "ripcord": {
    "rules": [
      "precommit-script",
      "security-check-script",
      "lint-script",
      "api-docs-generate-script",
      "api-docs-publish-script"
    ]
  },
  "pre-commit": [
    "lint",
    "test",
    "secure",
    "docs"
  ],
  "scripts": {
    "pretest": "webpack test/app/client-app.js test/app/public/browser-csrf.bundle.js",
    "test": "node test/",
    "secure": "nsp check",
    "lint": "standard",
    "docs": "ripcord docs",
    "docs-publish": "ripcord docs --publish",
    "postpublish": "npm run docs-publish",
    "selenium:install": "selenium-standalone install",
    "selenium:start": "selenium-standalone start"
  }
}
