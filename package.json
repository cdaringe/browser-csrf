{
  "name": "browser-csrf",
  "description": "Inject CSRF tokens into your browser's network requests",
  "version": "0.0.1",
  "main": "src/index.js",
  "license": "MIT",
  "standard": {
    "globals": [
      "XMLHttpRequest"
    ]
  },
  "dependencies": {
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "nsp": "^2.6.3",
    "ripcord": "^0.25.7",
    "standard": "^9.0.1"
  },
  "ripcord": {
    "rules": [
      "precommit-script",
      "security-check-script",
      "lint-script",
      "api-docs-generate-script",
      "api-docs-publish-script"
    ]
  },
  "pre-commit": [
    "lint",
    "test",
    "secure",
    "docs"
  ],
  "scripts": {
    "secure": "nsp check",
    "lint": "standard",
    "docs": "ripcord docs",
    "docs-publish": "ripcord docs --publish",
    "postpublish": "npm run docs-publish"
  }
}
